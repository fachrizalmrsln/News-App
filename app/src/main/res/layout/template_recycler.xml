<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/padding"
        android:layout_margin="@dimen/margin"
        app:cardCornerRadius="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_title"
                android:textSize="@dimen/text30"
                android:layout_margin="@dimen/margin"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_template"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size300"
                    app:srcCompat="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_date"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="@dimen/margin"
                    tools:ignore="RtlHardcoded"
                    android:textColor="@android:color/black"
                    android:background="@drawable/date_box"
                    android:padding="@dimen/padding"/>

            </FrameLayout>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text18"
                android:layout_margin="@dimen/margin"
                android:text="@string/dummy_description"/>

            <TextView
                android:id="@+id/text_authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_authors"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>